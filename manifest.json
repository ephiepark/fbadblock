{
    "manifest_version": 2,

    "name": "CommentOut",
    "description": "Blocks ads in fb comments",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.facebook.com/*"],
            "css": [],
            "js": ["commentout.js"]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}
